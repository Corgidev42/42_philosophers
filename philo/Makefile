# DÃ©finition de la variable de bascule
IS_LIBFT ?= false

# ğŸ›  Compilateur et flags
CC = gcc
CFLAGS = -Wall -Werror -Wextra
LDFLAGS =

# ğŸ† Nom du projet
PROJECT_NAME = philo

# ğŸ–¥ï¸ DÃ©tection de l'OS
UNAME_S := $(shell uname -s)
ifeq ($(UNAME_S), Linux)
	CFLAGS   += -I/usr/include
	LDFLAGS  += -L/usr/lib
else ifeq ($(UNAME_S), Darwin)
	CFLAGS   += -I/opt/homebrew/include
	LDFLAGS  += -L/opt/homebrew/lib -framework Cocoa
else ifeq ($(UNAME_S), Windows_NT)
	CFLAGS   +=
	LDFLAGS  +=
endif

# ğŸ“‚ RÃ©pertoires
SRC_DIR = src
OBJ_DIR = obj
INCLUDE_DIR = include

# ğŸ“Œ Fichiers sources et objets
SRC_FILES = $(wildcard $(SRC_DIR)/*.c) $(wildcard $(SRC_DIR)/*/*.c)
OBJ_FILES = $(patsubst $(SRC_DIR)/%.c, $(OBJ_DIR)/%.o, $(SRC_FILES))

# ğŸ“š Inclusion des headers
INCLUDES = -I$(INCLUDE_DIR)

ifeq ($(IS_LIBFT), true)
	# ğŸ”§ Configuration de libft
	LIBFT_DIR = mylib
	LIBFT = $(LIBFT_DIR)/lib/libft.a
	LIBFT_REPO = https://github.com/Corgidev42/mylib.git
	LIBFT_INCLUDE = -I$(LIBFT_DIR)/include
	INCLUDES += $(LIBFT_INCLUDE)
endif

# ğŸ¯ RÃ¨gle principale
all: $(PROJECT_NAME)

ifeq ($(IS_LIBFT), true)
# ğŸ—ï¸ CrÃ©ation de l'exÃ©cutable avec libft
$(PROJECT_NAME): $(LIBFT) $(OBJ_FILES)
	$(CC) $(CFLAGS) $(INCLUDES) $(OBJ_FILES) $(LDFLAGS) $(LIBFT) -o $@
	@echo "âœ… Compilation terminÃ©e avec libft !"
else
# ğŸ—ï¸ CrÃ©ation de l'exÃ©cutable sans libft
$(PROJECT_NAME): $(OBJ_FILES)
	$(CC) $(CFLAGS) $(INCLUDES) $(OBJ_FILES) $(LDFLAGS) -o $@
	@echo "âœ… Compilation terminÃ©e sans libft !"
endif

# ğŸ› ï¸ Compilation des fichiers objets (prise en charge des sous-dossiers)
$(OBJ_DIR)/%.o: $(SRC_DIR)/%.c | $(OBJ_DIR)
	@mkdir -p $(dir $@)
	$(CC) -c $(CFLAGS) $(INCLUDES) $< -o $@
	@echo "ğŸ”¨ CompilÃ© : $< -> $@"

$(OBJ_DIR):
	mkdir -p $(OBJ_DIR)

ifeq ($(IS_LIBFT), true)
# ğŸ“¦ Clonage de libft (si nÃ©cessaire)
$(LIBFT_DIR):
	git clone $(LIBFT_REPO) $(LIBFT_DIR)

# ğŸ“¦ Compilation de libft (seulement si nÃ©cessaire)
$(LIBFT): | $(LIBFT_DIR)
	@if [ ! -f $(LIBFT) ]; then \
		echo "ğŸ“¥ Compilation de libft..."; \
		make -C $(LIBFT_DIR); \
	else \
		echo "âœ… libft dÃ©jÃ  compilÃ©e."; \
	fi
endif

# ğŸ§¹ Nettoyage des fichiers objets
clean:
	rm -rf $(OBJ_DIR)
ifeq ($(IS_LIBFT), true)
	if [ -d $(LIBFT_DIR) ]; then make -C $(LIBFT_DIR) clean; fi
endif
	@echo "ğŸ—‘ï¸  Fichiers objets nettoyÃ©s."

# ğŸ—‘ï¸ Nettoyage complet (objets, exÃ©cutable ET, si applicable, libft)
fclean: clean
	rm -f $(PROJECT_NAME)
ifeq ($(IS_LIBFT), true)
	rm -rf $(LIBFT_DIR)
endif
	@echo "ğŸ—‘ï¸  Nettoyage complet effectuÃ©."

# ğŸ”„ Reconstruction
re: fclean all

# â–¶ï¸ ExÃ©cution du projet avec support d'arguments (optionnel)
run: all
	./$(PROJECT_NAME) $(ARGS)

.PHONY: all clean fclean re run
